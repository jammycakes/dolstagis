@{
  Bundles.Reference("Scripts");
  Bundles.Reference("Content");
}
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Bundles.RenderScripts()
    @Bundles.RenderStylesheets()
  </head>
  <body>
    @Html.FlashedMessages()

    <div id="all">
      @RenderBody()
    </div>
  </body>
</html>
